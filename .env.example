# Application Settings
APP_NAME=NestJS API Starter Kit
APP_DESCRIPTION=A comprehensive NestJS API with authentication, RBAC, and more
NODE_ENV=development
PORT=3030

# Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nestjs_starter
DB_USER=postgres
DB_PASSWORD=postgres
DB_SYNC=false
DB_LOGGING=true

# Cache Settings
CACHE_TTL=300

# Security Settings
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=1d
REFRESH_TOKEN_EXPIRATION=7d
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Throttling and Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Logging Configuration
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=*

# File Storage
FILE_STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760
